@model eRentSolution.ViewModels.System.Users.UserUpdateRequest

@{ ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout3.cshtml"; }


<link rel="stylesheet" href="~/css/input.css" />
<script src='https://cdn.jsdelivr.net/gh/vietblogdao/js/districts.min.js'></script>
<div class="container-contact100">
    <div class="wrap-contact100">
        <form asp-action="Edit" class="contact100-form validate-form">
            <span class="contact100-form-title">
                Cập nhật thông tin tài khoản
            </span>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="wrap-input100 validate-input">
                <span class="label-input100">Họ</span>
                <input class="input100 name" asp-for="FirstName">
                <span class="focus-input100"></span>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="wrap-input100 validate-input">
                <span class="label-input100">Tên</span>
                <input class="input100" asp-for="LastName">
                <span class="focus-input100"></span>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="wrap-input100 validate-input">
                <span class="label-input100">Ngày sinh</span>
                <input type="date" class="input100" asp-for="Dob">
                <span class="focus-input100"></span>
                <span asp-validation-for="Dob" class="text-danger"></span>
            </div>
            <div class="wrap-input100 validate-input">
                <span class="label-input100">Email</span>
                <input class="input100" asp-for="Email">
                <span class="focus-input100"></span>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="wrap-input100 validate-input">
                <span class="label-input100">Số điện thoại</span>
                <input class="input100" asp-for="PhoneNumber">
                <span class="focus-input100"></span>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="container-contact100-form-btn">
                <div class="wrap-contact100-form-btn">
                    <div class="contact100-form-bgbtn"></div>
                    <input asp-for="Id" type="hidden" input />
                    <input asp-for="UserName" type="hidden" input />

                    <button onclick="myFunction()" type="submit" class="contact100-form-btn">
                        <span>
                            Cập nhật
                            <i class="fa fa-long-arrow-right m-l-7" aria-hidden="true"></i>
                        </span>
                    </button>
                </div>
            </div>
        </form>
    </div>
    

</div>

