@model eRentSolution.ViewModels.System.Users.UserAvatarUpdateRequest
@inject Microsoft.Extensions.Configuration.IConfiguration configuration;
@{ ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout3.cshtml"; }


<link rel="stylesheet" href="~/css/input.css" />

<div class="container-contact100">
    <div class="wrap-contact100">
        <form asp-action="EditAvatar" enctype="multipart/form-data" class="contact100-form validate-form">
            <span class="contact100-form-title">
                Cập nhật ảnh đại diện
            </span>

            <div class="wrap-input100 validate-input">
                <span style="font-size:2rem; text-align:center; font-weight:500;" class="input100">Hình ảnh cũ</span>
                <a style="display:block; margin: 10px 0 0 146px;" href="#"><img src="@configuration["BaseAddress"]/user-content/@Model.OldAvatarFilePath" alt="N/A" style="width: 100px; height: 100px; object-fit: cover;"></a>
                <span class="focus-input100"></span>

            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @*<div class="wrap-input100 validate-input">
                <span class="label-input100">Mã ảnh</span>
                <input class="input100 name" asp-for="Id">
                <span class="focus-input100"></span>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>*@

            <div class="wrap-input100 validate-input">
                <span class="label-input100">Tên</span>
                <input type="file" class="input100" asp-for="AvatarFile">
                <span class="focus-input100"></span>
                <span asp-validation-for="AvatarFile" class="text-danger"></span>
            </div>

            <div class="container-contact100-form-btn">
                <div class="wrap-contact100-form-btn">
                    <div class="contact100-form-bgbtn"></div>
                    <input asp-for="Id" type="hidden" input />
                    <input asp-for="OldAvatarFilePath" type="hidden" input />
                    <input asp-for="AvatarFile" type="hidden" input />
                    <button type="submit" class="contact100-form-btn">
                        <span>
                            Cập nhật
                            <i class="fa fa-long-arrow-right m-l-7" aria-hidden="true"></i>
                        </span>
                    </button>
                </div>
            </div>
        </form>
    </div>


</div>