@model eRentSolution.ViewModels.Catalog.Categories.CategoryAssignRequest

@{ ViewData["Title"] = "CategoryAssign";
                Layout = "~/Views/Shared/_Layout3.cshtml"; }


<link rel="stylesheet" href="~/css/input.css" />
<div class="container-contact100">
    <div class="wrap-contact100">
        <form asp-action="CategoryAssign" class="contact100-form validate-form">
            <span class="contact100-form-title">
                Gán danh mục sản phẩm
            </span>

            <div class="wrap-input100 validate-input">
                @for (int i = 0; i < Model.Categories.Count; i++)
                {
            <div class="form-group">
                <label>
                    <input type="checkbox" asp-for="Categories[i].Selected" />
                    <input type="hidden" asp-for="Categories[i].Id" />
                    <input type="hidden" asp-for="Categories[i].Name" />
                    @Model.Categories[i].Name
                </label>
            </div>}
            </div>


            <div class="container-contact100-form-btn">
                <div class="wrap-contact100-form-btn">
                    <div class="contact100-form-bgbtn"></div>
                    <input asp-for="Id" type="hidden" input />
                    <button type="submit" class="contact100-form-btn">
                        <span>
                            Lưu lại
                            <i class="fa fa-long-arrow-right m-l-7" aria-hidden="true"></i>
                        </span>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>