<ul class="breadcrumb">
    <li><a href="/Home/index">Home</a></li>
    @{ if (Model.Categories.Count > 0)
        {
<li><a href="/Categories/@Model.Categories[0].Id">@Model.Categories[0].Name</a></li>   
            }
            else
            {
            <li><a href="#">N/A </a></li>
            }
        }
    
    <li>@Model.Product.Name</li>
</ul>
<div class="box-photo-slider">
    <div class="slideshow-container">

        <!-- Full-width images with number and caption text -->
        <div class="mySlides fade">
            <div class="numbertext">1 / 3</div>
           
                <img class="slider-photo" src="@Configuration["BaseAddress"]/user-content/@Model.Product.ThumbnailImage" style="width:100% alt="@Model.Product.Name" />
        </div>

        <div class="mySlides fade">
            <div class="numbertext">2 / 3</div>
            <img class="slider-photo" src="https://cdn.chotot.com/GqssyHamxe5kGJikMlqFVPI6McRHCzUIP6r1tD_Ic7Q/preset:view/plain/4768326150.jpg" style="width:100%">

        </div>

        <div class="mySlides fade">
            <div class="numbertext">3 / 3</div>
            <img class="slider-photo" src="https://cdn.chotot.com/xwt8hsR8PkAfr8-4-49kK5F7Oi1IbDpeOzrCHqWIT50/preset:view/plain/4754467765.jpg" style="width:100%">

        </div>

        <!-- Next and previous buttons -->
        <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
        <a class="next" onclick="plusSlides(1)">&#10095;</a>
    </div>
    <div class="box-description">
        <p class="box-description__name">@Model.Product.Name</p>
        <span class="box-description__price">
            @Model.Product.ProductDetailViewModels.ElementAt(0).Price&#8363 /tháng
        </span>
        <span class="box-description__dtich"> - 18 m2</span>
        <p class="box-description__address">
            <img src="https://static.chotot.com/storage/icons/logos/ad-param/location.svg" alt="">
            <span>@Model.Product.Description</span>
        </p>
        <p class="box-description__text">
            @Model.Product.Details
        </p>
        <p class="box-description__phone">SĐT: 0762216048</p>
        <span class="box-description__tinhtrang">Số phòng còn trống: @Model.Product.ProductDetailViewModels.ElementAt(0).Stock</span>
        <span class="box-description__s">Diện tích: 18 m2</span>
    </div>

</div>
 <script>

     var slideIndex = 1;
     showSlides(slideIndex);

     // Next/previous controls
     function plusSlides(n) {
         showSlides(slideIndex += n);
     }

     // Thumbnail image controls
     function currentSlide(n) {
         showSlides(slideIndex = n);
     }

     function showSlides(n) {
         var i;
         var slides = document.getElementsByClassName("mySlides");
         var dots = document.getElementsByClassName("dot");
         if (n > slides.length) { slideIndex = 1 }
         if (n < 1) { slideIndex = slides.length }
         for (i = 0; i < slides.length; i++) {
             slides[i].style.display = "none";
         }
         for (i = 0; i < dots.length; i++) {
             dots[i].className = dots[i].className.replace(" active", "");
         }
         slides[slideIndex - 1].style.display = "block";
         dots[slideIndex - 1].className += " active";
     }
 </script>