@model eRentSolution.ViewModels.System.Users.UserLoginRequest
@{ ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

@section Scripts{
    <script>
        setTimeout(function () {
            $('#msgAlert').fadeOut('slow');
        }, 2000);
    </script>

}

<div class="container register">
    <div class="row">
        <div class="col-md-3 register-left">
            <img src="https://image.ibb.co/n7oTvU/logo_white.png" alt="" />
            <h3>Welcome</h3>
        </div>
        
        <div class="col-md-9 register-right">
            <ul class="nav nav-tabs nav-justified" id="myTab" role="tablist">
            </ul>
            
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    <h3 style="margin-right:200px;" class="register-heading">Đăng nhập tài khoản</h3>
                    @if (ViewBag.Success != null)
                    {
                        <div id="msgAlert" class="alert alert-success" role="alert">
                            @ViewBag.Success
                        </div>
                    }
                    @if (TempData["failResult"] != null)
                    {
                        <div id="msgAlert" class="alert alert-success" role="alert">
                            @TempData["failResult"]
                        </div>
                    }
                    <form action="/Account/Login" method="post">
                        <div class="row register-form">
                            <div class="col-md-8">
                                <div asp-validation-summary="All" class="text-error">
                                    <div class="form-group">
                                        <input type="text" class="form-control" asp-for="UserName" placeholder="UserName *" value="" />
                                    </div>
                                    <div class="form-group">
                                        <input type="password" class="form-control" asp-for="Password" placeholder="Password *" value="" />
                                    </div>
                                    <div style="position:relative;" class="custom-control custom-checkbox">
                                        @*<input class="custom-control-input" asp-for="RememberMe" type="checkbox" />*@
                                        <input style="position: absolute; top: 3px; left: 0;"  type="checkbox" asp-for="RememberMe" />
                                        <label style="font-size:1.2rem; color:black; margin-left:4px;" class="">Nhớ đăng nhập</label>
                                    </div>
                                        <input type="submit" class="btnRegister" value="Đăng nhập" />
                                         <a href="/User/ForgotPassword" class="forgotPassword">Quên mật khẩu?</a>
                                    </div>
                                </div>
                            </div>
                    </form>
                 
                </div>

            </div>
        </div>
    </div>

</div>