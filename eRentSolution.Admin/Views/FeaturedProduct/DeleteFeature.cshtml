@model eRentSolution.ViewModels.Catalog.Products.FeatureProductRequest

@{ ViewData["Title"] = "Xóa tin tức nổi bật";
                Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<div class="container-fluid">
    <h1 class="mt-4">Xóa</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a class="nav-link" asp-action="index" asp-controller="home">Trang chủ</a></li>
        <li class="breadcrumb-item active">Xóa</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <a class="btn btn-success" asp-action="Index" asp-controller="FeaturedProduct">Về danh sách</a>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="card-body">
            <div class="col-md-12">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ProductId)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ProductId)
                    </dd>
                </dl>


                <form asp-action="DeleteFeature">
                    <input asp-for="ProductId" type="hidden" input />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
</div>
