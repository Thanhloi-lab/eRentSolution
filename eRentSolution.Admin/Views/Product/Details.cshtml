@model eRentSolution.ViewModels.Catalog.Products.ProductViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">
    <h1 class="mt-4">Chi tiết</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a class="nav-link" asp-action="index" asp-controller="home">Trang chủ</a></li>
        <li class="breadcrumb-item active">Chi tiết</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <a class="btn btn-success" asp-action="Index" asp-controller="User">Về danh sách</a>
        </div>

        <div class="card-body">
            <div class="row-cols-md-2">
                <dl class="row">
                    <dt class="col-sm-12">
                        @Html.DisplayNameFor(model => model.Id)
                    </dt>
                    <dd class="col-sm-12">
                        @Html.DisplayFor(model => model.Name)
                    </dd>

                    <dd class="col-sm-12">
                        @Html.DisplayFor(model => model.ViewCount)
                    </dd>
                    <dd class="col-sm-12">
                        @Html.DisplayFor(model => model.Categories)
                    </dd>
                    <dt class="col-sm-12">
                        @Html.DisplayNameFor(model => model.IsFeatured)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Description)
                    </dd>
                    <dt class="col-sm-12" class="row-cols-sm-6">
                        @Html.DisplayNameFor(model => model.Details)
                    </dt>
                    <dd class="col-sm-12">
                        @Html.DisplayFor(model => model.DateCreated)
                    </dd>
                    <dt class="col-sm-12">
                        @Html.DisplayNameFor(model => model.SeoAlias)
                    </dt>
                    <dd class="col-sm-12">
                        @Html.DisplayFor(model => model.SeoDescription)
                    </dd>
                    <dt class="col-sm-12">
                        @Html.DisplayNameFor(model => model.SeoAlias)
                    </dt>
                    <dd class="col-sm-10" class="row-cols-sm-6">
                        @Html.DisplayFor(model => model.ThumbnailImage)
                    </dd>
                    @foreach (var item in Model.ProductDetailViewModels)
                    {
                        <dt class="col-sm-12">
                            @Html.DisplayNameFor(model => item.Price)
                        </dt>
                        <dd class="col-sm-12">
                            @Html.DisplayFor(model => item.OriginalPrice)
                        </dd>
                        <dd class="col-sm-12">
                            @Html.DisplayFor(model => item.Stock)
                        </dd>
                    }
                </dl>
            </div>
        </div>
    </div>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { Model.Id }) |
    <a asp-action="Index">Back to List</a>
</div>
