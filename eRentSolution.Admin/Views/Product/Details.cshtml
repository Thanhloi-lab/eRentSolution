@model eRentSolution.ViewModels.Catalog.Products.ProductViewModel 
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration;
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">
    <h1 class="mt-4">Chi tiết sản phẩm</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a class="nav-link" asp-action="index" asp-controller="home">Trang chủ</a></li>
        <li class="breadcrumb-item active">Chi tiết sản phẩm</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <a class="btn btn-success" asp-action="Index" asp-controller="Product">Về danh sách</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                Thuộc tính
                            </th>
                            <th>
                                Mô tả



                        </tr>
                    </thead>

                    <tbody>

                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Name)
                            </td>
                        </tr>
                    </tbody>

                    <tbody>

                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.ViewCount)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.ViewCount)
                            </td>
                        </tr>
                    </tbody>
                    <tbody>

                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.Categories)
                            </td>
                            @if (Model.Categories != null)
                            {

                                for (int i = 0; i < Model.Categories.Count; i++)
                                {
                <td>
                    @Html.DisplayFor(model => Model.Categories[i])
                </td> }
                                if (Model.Categories.Count == 0)
                                {
                <td>
                    N/A
                </td> }
                            }
                            else
                            {
                <td>
                    N/A
                </td>}

                        </tr>
                    </tbody>
                    <tbody>

                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.IsFeatured)

                            </td>
                            <td>
                                @Html.DisplayFor(model => model.IsFeatured)
                            </td>
                        </tr>
                    </tbody>
                    <tbody>

                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.Description)

                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Description)
                            </td>
                        </tr>
                    </tbody>
                    <tbody>

                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.Details)

                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Details)
                            </td>
                        </tr>
                    </tbody>
                    <tbody>

                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.DateCreated)

                            </td>
                            <td>
                                @Html.DisplayFor(model => model.DateCreated)
                            </td>
                        </tr>
                    </tbody>
                    <tbody>

                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.ThumbnailImage)

                            </td>
                            <td>
                                <a href="#"><img src="@Configuration["BaseAddress"]/user-content/@Model.ThumbnailImage" alt="@Model.Name" style="width: 100px; height: 50px; object-fit: cover;"></a>
                            </td>
                        </tr>
                    </tbody>
                    <tbody>

                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.Stock)

                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Stock)
                            </td>
                        </tr>
                    </tbody>
                    @foreach (var item in Model.ProductDetailViewModels)
                    {
                        <tbody>

                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => item.Price)

                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.Price)
                                </td>
                            </tr>
                           
                        </tbody>
                         <tbody>

                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => item.OriginalPrice)

                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.OriginalPrice)
                                </td>
                            </tr>
                           
                        </tbody>
                       
                        break;
                    }
                </table>
            </div>
        </div>
    </div>
</div>
<div>
  
        <form asp-action="Edit" method="get" style="margin: 40px;">
            <input asp-for="Id" type="hidden" input />
            <input type="submit" value="Edit" class="btn btn-danger" />
        </form>
   </div>
