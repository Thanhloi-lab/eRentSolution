@model eRentSolution.ViewModels.System.Users.UserResetPasswordByEmailRequest

@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h1>ResetPassword</h1>

<h4>ResetPasswordRequest</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ResetPasswordByEmail">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Date" type="hidden" value="@(ViewContext.HttpContext.Request.Query["expires"])" hidden />
            <input asp-for="Email" type="hidden" value="@(ViewContext.HttpContext.Request.Query["Email"])" hidden />
            <input asp-for="Token" type="hidden" value="@(ViewContext.HttpContext.Request.Query["Token"])" hidden />
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Đặt lại" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>